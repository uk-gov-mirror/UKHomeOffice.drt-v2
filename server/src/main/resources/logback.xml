<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <!-- encoders are assigned the type
             ch.qos.logback.classic.encoder.PatternLayoutEncoder by default -->
        <encoder>
            <pattern>%date{ISO8601} [%thread] %-5level %logger{36} %X{terminalQueue} - %msg%n</pattern>
        </encoder>
    </appender>


    <!--<logger name="services.AdvPaxSplitsProvider" level="DEBUG" />-->

    <root level="ERROR">
        <appender-ref ref="STDOUT"/>
    </root>
    <logger level="ERROR" name="p.core.SingleFlightActor">
        <appender-ref ref="STDOUT"/>
    </logger>
    <logger level="ERROR" name="org.apache.spark" />
    <logger level="ERROR" name="breeze.optimize" />
    <logger level="ERROR" name="org.spark_project" />
</configuration>
